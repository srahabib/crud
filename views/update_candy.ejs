<%- include('include/_header') %>

<!--Main-->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div>
        <a href="/"> <i class="fas fa-angle-double-left"></i> All Candy </a>
      </div>
      <div>
        <h2>Update Candy</h2>
      </div>
    </div>

    <!-- form handling -->
    <form method="POST">
      <input type="hidden" name="id" value="<%= candy._id%>" />
      <input
        type="text"
        name="name"
        value="<%= candy.name%>"
        placeholder="Enter Snack"
      />
      <input
        type="number"
        name="quantity"
        value="<%= candy.quantity%>"
        placeholder="Quantity"
      />
      <input type="date" name="date" value="" />
      <input type="submit" value="Submit" />
    </form>
  </div>
</main>

<!--Main-->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
